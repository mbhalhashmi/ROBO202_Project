<?xml version="1.0"?>
<robot name="tricycle">

  <!-- Base -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.4 0.3 0.2"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.4 0.3 0.2"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01083" ixy="0" ixz="0" iyy="0.01667" iyz="0" izz="0.02083"/>
    </inertial>
  </link>

  <!-- Front fork (steered) -->
  <link name="fork">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.1"/>
      </geometry>
      <origin xyz="0 0 -0.05" rpy="0 0 0"/>
      <material name="grey">
        <color rgba="0.6 0.6 0.6 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.05 0.1"/>
      </geometry>
      <origin xyz="0 0 -0.05" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Front wheel -->
  <link name="fwheel">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.12"/>
      <inertia ixx="7.58e-5" ixy="0" ixz="0" iyy="7.58e-5" iyz="0" izz="1.25e-4"/>
    </inertial>
  </link>

  <!-- Rear wheels -->
  <link name="bwheel_right">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.12"/>
      <inertia ixx="9e-5" ixy="0" ixz="0" iyy="9e-5" iyz="0" izz="1.4e-4"/>
    </inertial>
  </link>

  <link name="bwheel_left">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.12"/>
      <inertia ixx="9e-5" ixy="0" ixz="0" iyy="9e-5" iyz="0" izz="1.4e-4"/>
    </inertial>
  </link>

  <!-- Camera link -->
  <link name="camera_link">
    <visual>
      <geometry><box size="0.05 0.05 0.05"/></geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="gray"><color rgba="0.5 0.5 0.5 1"/></material>
    </visual>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5"/>
    </inertial>
  </link>

  <!-- Joints -->
  <joint name="steer_joint" type="revolute">
    <parent link="base_link"/>
    <child  link="fork"/>
    <origin xyz="0.15 0 0.0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.6" upper="0.6" effort="10" velocity="2.0"/>
    <dynamics damping="0.2"/>
  </joint>

  <joint name="fork_to_fwheel" type="continuous">
    <parent link="fork"/>
    <child  link="fwheel"/>
    <origin xyz="0 0 -0.14" rpy="-1.5707 0 0"/>
    <axis xyz="0 0 1"/> <!-- FIXED: wheel spins about Y due to link roll -->
    <dynamics damping="0.0" friction="0.1"/>
  </joint>

  <joint name="base_to_rwheel" type="continuous">
    <parent link="base_link"/>
    <child  link="bwheel_right"/>
    <origin xyz="-0.17 -0.17 -0.14" rpy="-1.5707 0 0"/>
    <axis xyz="0 0 1"/> <!-- FIXED -->
    <dynamics damping="0.0" friction="0.1"/>
  </joint>

  <joint name="base_to_bwheel_left" type="continuous">
    <parent link="base_link"/>
    <child  link="bwheel_left"/>
    <origin xyz="-0.17 0.17 -0.14" rpy="-1.5707 0 0"/>
    <axis xyz="0 0 1"/> <!-- FIXED -->
    <dynamics damping="0.0" friction="0.1"/>
  </joint>

  <joint name="base_to_camera" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.2 0 0.20" rpy="0 0 0"/>
  </joint>

  <!-- Gazebo visuals -->
  <gazebo reference="base_link"><material>Gazebo/White</material></gazebo>
  <gazebo reference="fwheel"><material>Gazebo/Black</material></gazebo>
  <gazebo reference="bwheel_left"><material>Gazebo/Black</material></gazebo>
  <gazebo reference="bwheel_right"><material>Gazebo/Black</material></gazebo>
  <gazebo reference="camera_link"><material>Gazebo/Red</material></gazebo>

  <!-- Diff drive on rear wheels (ROS 2, Gazebo Classic) -->
  <gazebo>
    <plugin name="tricycle_system" filename="libgazebo_ros_diff_drive.so">
      <ros>
        <remapping>cmd_vel:=/cmd_vel</remapping>
      </ros>
      <left_joint>base_to_bwheel_left</left_joint>
      <right_joint>base_to_rwheel</right_joint>
      <wheel_separation>0.34</wheel_separation>
      <wheel_diameter>0.10</wheel_diameter>
      <max_wheel_torque>200</max_wheel_torque>
      <max_wheel_acceleration>10.0</max_wheel_acceleration>
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
    </plugin>
  </gazebo>

  <!-- Front camera (ROS 2 plugin keys, 0.5 m far clip) -->
  <gazebo reference="camera_link">
    <sensor name="camera_sensor" type="camera">
      <pose>0 0 0 0 0 0</pose>
      <update_rate>10.0</update_rate>
      <always_on>true</always_on>
      <visualize>true</visualize>
      <camera name="front_cam">
        <horizontal_fov>1.047</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>0.5</far>
        </clip>
      </camera>

      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <ros>
          <namespace>/</namespace>
        </ros>
        <frame_name>camera_link</frame_name>
        <camera_name>camera</camera_name>
        <image_topic_name>/camera/image_raw</image_topic_name>
        <camera_info_topic_name>/camera/camera_info</camera_info_topic_name>
      </plugin>
    </sensor>
  </gazebo>

</robot>
