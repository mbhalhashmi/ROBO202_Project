<?xml version="1.0"?>
<robot name="tricycle">

  <!-- Base -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.4 0.3 0.2"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.4 0.3 0.2"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01083" ixy="0" ixz="0" iyy="0.01667" iyz="0" izz="0.02083"/>
    </inertial>
  </link>

  <!-- Steering fork -->
  <link name="fork">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.1"/>
      </geometry>
      <origin xyz="0 0 -0.05" rpy="0 0 0"/>
      <material name="gray">
        <color rgba="0.6 0.6 0.6 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.05 0.1"/>
      </geometry>
      <origin xyz="0 0 -0.05" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Front Wheel -->
  <link name="fwheel">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.12"/>
      <inertia ixx="7.58e-5" ixy="0" ixz="0" iyy="7.58e-5" iyz="0" izz="1.25e-4"/>
    </inertial>
  </link>

  <!-- Back Right Wheel -->
  <link name="bwheel_right">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.12"/>
      <inertia ixx="9e-5" ixy="0" ixz="0" iyy="9e-5" iyz="0" izz="1.4e-4"/>
    </inertial>
  </link>

  <!-- Back Left Wheel -->
  <link name="bwheel_left">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.12"/>
      <inertia ixx="9e-5" ixy="0" ixz="0" iyy="9e-5" iyz="0" izz="1.4e-4"/>
    </inertial>
  </link>

  <!-- Camera Link -->
  <link name="camera_link">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <!-- Mounting above and ahead of the base -->
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
  </link>

  <!-- Joints -->

  <!-- Steering (rotate about Z) -->
  <joint name="steer_joint" type="revolute">
    <parent link="base_link"/>
    <child  link="fork"/>
    <origin xyz="0.15 0 0.0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.6" upper="0.6" effort="10" velocity="2.0"/>
    <dynamics damping="0.2"/>
  </joint>

  <!-- Front wheel spin (spin axis is +Y) -->
  <joint name="fork_to_fwheel" type="continuous">
    <parent link="fork"/>
    <child  link="fwheel"/>
    <origin xyz="0 0 -0.12" rpy="-1.5708 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.0" friction="0.1"/>
  </joint>

  <!-- Rear right wheel spin -->
  <joint name="base_to_rwheel" type="continuous">
    <parent link="base_link"/>
    <child  link="bwheel_right"/>
    <origin xyz="-0.17 -0.17 -0.1" rpy="-1.5708 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.0" friction="0.1"/>
  </joint>

  <!-- Rear left wheel spin -->
  <joint name="base_to_bwheel_left" type="continuous">
    <parent link="base_link"/>
    <child  link="bwheel_left"/>
    <origin xyz="-0.17 0.17 -0.1" rpy="-1.5708 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.0" friction="0.1"/>
  </joint>

  <!-- Camera Joint -->
  <joint name="base_to_camera" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.15 0 0.12" rpy="0 0 0"/>
  </joint>

  <!-- Gazebo visual materials -->
  <gazebo reference="base_link">
    <material>Gazebo/White</material>
  </gazebo>
  <gazebo reference="fwheel">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="bwheel_left">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="bwheel_right">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="camera_link">
    <material>Gazebo/Gray</material>
  </gazebo>

  <!-- Gazeboo Plugin -->
  <gazebo>
    <!-- Plugin name and the library used-->
    <plugin name="tricycle_system" filename="libgazebo_ros_diff_drive.so">

      <!-- ROS2 integration, remaps the topic that this plugin subcribes to for velocity commands -->
      <ros>
        <remapping>cmd_vel:=/cmd_vel</remapping>
      </ros>

      <!-- The two wheel joints that the plugin controls for motion -->
      <left_joint>base_to_bwheel_left</left_joint>
      <right_joint>base_to_rwheel</right_joint>

      <!-- Physical Parameters of the robot -->
      <!-- Distance between the two rear wheels -->
      <wheel_separation>0.24</wheel_separation>
      <!-- Diameter of each wheel -->
      <wheel_diameter>0.10</wheel_diameter>

      <!-- Limits for motion -->
      <!-- Max torque applied to wheels-->
      <max_wheel_torque>200</max_wheel_torque>
      <!-- Max angular acceleration of the wheels-->
      <max_wheel_acceleration>10.0</max_wheel_acceleration>

      <!-- Odometry Publishing Options (Tells ROS how far the robot moved )-->
      <!-- Publish wheel odometry on /odom-->
      <publish_odom>true</publish_odom>
      <!-- Publish the transform between odom and base_link-->
      <publish_odom_tf>true</publish_odom_tf>
    </plugin>
  </gazebo>

  <!-- Gazebo Camera Plugin -->
  <gazebo reference="camera_link">
    <sensor name="front_camera" type="camera">
      <pose>0 0 0 0 0 0</pose>
      <camera>
        <horizontal_fov>1.047</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.05</near>
          <far>5.0</far>
        </clip>
      </camera>

      <!-- MUST be true so the sensor actually runs -->
      <always_on>true</always_on>
      <visualize>true</visualize>
      <update_rate>10.0</update_rate>

      <!-- ROS 2 Camera Plugin -->
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <ros>
          <!-- Force root namespace so topics aren't under /tricycle/... -->
          <namespace>/</namespace>

          <!-- Standardize names to your project requirement -->
          <remapping>image:=/camera/image_raw</remapping>
          <remapping>camera_info:=/camera/camera_info</remapping>
        </ros>
        <frame_name>camera_link</frame_name>
      </plugin>

    </sensor>
  </gazebo>

</robot>
