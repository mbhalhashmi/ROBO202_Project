<?xml version="1.0"?>
<robot name="tricycle">

  <!-- Base -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.4 0.3 0.2"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.4 0.3 0.2"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01083" ixy="0" ixz="0" iyy="0.01667" iyz="0" izz="0.02083"/>
    </inertial>
  </link>

  <!-- Left Wheel -->
  <link name="lwheel">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="7.58e-5" ixy="0" ixz="0" iyy="7.58e-5" iyz="0" izz="1.25e-4"/>
    </inertial>
  </link>

  <!-- Right Wheel -->
  <link name="rwheel">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="7.58e-5" ixy="0" ixz="0" iyy="7.58e-5" iyz="0" izz="1.25e-4"/>
    </inertial>
  </link>

  <!-- Back Wheel -->
  <link name="bwheel">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="7.58e-5" ixy="0" ixz="0" iyy="7.58e-5" iyz="0" izz="1.25e-4"/>
    </inertial>
  </link>

  <!-- Joints -->

  <!-- Left Wheel Joint -->
  <joint name="base_to_lwheel" type="continuous">
    <parent link="base_link"/>
    <child link="lwheel"/>
    <!-- front-left: x forward ~+0.15, y left +0.15, z to touch ground -->
    <origin xyz="0.15 0.15 -0.1" rpy="-1.5708 0 0"/>
    <!-- spin axis -->
    <axis xyz="0 0 1"/>
    <dynamics damping="0.0" friction="0.1"/>
  </joint>

  <!-- Right Wheel Joint -->
  <joint name="base_to_rwheel" type="continuous">
    <parent link="base_link"/>
    <child link="rwheel"/>
    <!-- front-right: mirror on y -->
    <origin xyz="0.15 -0.15 -0.1" rpy="-1.5708 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.0" friction="0.1"/>
  </joint>

  <!-- Back Wheel Joint -->
  <joint name="base_to_bwheel" type="continuous">
    <parent link="base_link"/>
    <child link="bwheel"/>
    <!-- rear center -->
    <origin xyz="-0.17 0 -0.125" rpy="-1.5708 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.0" friction="0.1"/>
  </joint>

  <!-- Gazebo visual materials -->
  <gazebo reference="base_link">
    <material>Gazebo/White</material>
  </gazebo>
  <gazebo reference="lwheel">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="rwheel">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="bwheel">
    <material>Gazebo/Black</material>
  </gazebo>

<!-- Gazebo Plugins -->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so"/>
  </gazebo>

  <gazebo>
    <plugin name="diff_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <ros>
        <remapping>cmd_vel:=/cmd_vel</remapping>
      </ros>

      <left_joint>base_to_lwheel</left_joint>
      <right_joint>base_to_rwheel</right_joint>
      <wheel_separation>0.4</wheel_separation>
      <wheel_diameter>0.1</wheel_diameter>
      
      <max_wheel_torque>200</max_wheel_torque>
      <max_wheel_acceleration>10.0</max_wheel_acceleration>

      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>

      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>true</publish_wheel_tf>      
    </plugin>
  </gazebo>

</robot>
